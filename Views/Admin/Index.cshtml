@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3 mt-2">
    <div class="row">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-header bg-white">Total de Usu√°rios</div>
            <div class="card-body bg-white">
                <h1 style="color:grey">@Model.Count()</h1>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-header bg-white">Dados Mockados 1</div>
            <div class="card-body bg-white">
                <h1 style="color:grey">1234</h1>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-5">
        <div class="card text-center">
            <div class="card-header bg-white">Dados Mockados 2</div>
            <div class="card-body bg-white">
                <h1 style="color:grey">5678</h1>
            </div>
        </div>
    </div>
</div>
    <div class="row pt-4 mt-5">
        <div class="col-6">
            <h2 style="color:white">Lista de clientes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Criar" class="btn bg-white" style="color:grey">
                <i class="bi bi-plus-circle"></i>
                Adicionar novo cliente</a>
        </div>
    </div>
    <br> <br>
     @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                       <span class="text-info">@TempData["msg"]</span>
                    </div>
                }
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Usuario
                </th>
                <th>
                    Email
                </th>
                <th>
                    Dashboard
                </th>
                <th>Editar</th>
                <th>Deletar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">
                        @obj.UserName
                    </td>
                    <td width="30%">
                        @obj.Email
                    </td>
                     <td class="text-break" width="30%">
                        @obj.FrameLink
                    </td>
                    <td>
                        <div class="w-75 btn-group text-end" role="group">
                            <a class="btn" asp-controller="Admin" asp-action="Editar" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Editar</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group text-end" role="group">
                            <a class="btn" asp-controller="Admin" asp-action="Deletar" asp-route-id="@obj.Id"> <i class="bi bi-trash"></i>Deletar</a>
                        </div>     
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>