<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eden</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Theme/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eden_Fn.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white ps-5">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Eden</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse flex-column" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        @if(User.IsInRole("user"))
                        {
                        <li class="nav-item">
                            <a class="nav-link active fs-6" asp-controller="Dashboard" asp-action="Index">Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fs-6" asp-controller="Dashboard" asp-action="Display">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fs-6" asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
                        </li>
                        }

                        @if(User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active fs-6" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active fs-6" asp-controller="Admin" asp-action="Criar">Cadastrar usuarios</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link active fs-6" asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container vh-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container p-4">
            &copy; 2023 - Eden - <a asp-area="" asp-controller="Home" asp-action="Privacy">Politica de privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
